    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
